extends ../layouts/Layout
block content
    include ../layouts/HeaderStudent

    include ../layouts/SearchForm

    if msg === ''
        .grid_con
            - classes.forEach(cls => {
                .class
                    a(href=`/classroom/${cls.name}` style='color:#000; font-size: 1.4rem;font-weight: bold;')= cls.subject
                    p= `Faculty: (${cls.teacher.faculty_id}) ${cls.teacher.name}`
                    .classes_btn_con
                        a(href=`/classroom/message/room/${cls.name}`) Message Room
            -})

    else 
        h1(class='error' style='margin:0 30px ;')= msg

    script(src="js/search.js")