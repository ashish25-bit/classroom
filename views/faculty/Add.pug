extends ../layouts/Layout
block content
    include ../layouts/HeaderTeacher

    //- department
    - var departments = [ 'CSE', 'CSE-IT', 'CSE-SWE', 'CSE-AI', 'CSE-BD', 'MECH', 'ECE-1', 'ECE-2', 'EEE', 'AUTOMOBILE', 'MECHATRONICS', 'AEROSPACE' ]
    - var semesters = [ 1, 2, 3, 4, 5, 6, 7, 8 ]
    - var sections = ['A1', 'A2', 'B1', 'B2', 'C1', 'C2', 'D1', 'D2', 'E1', 'E2', 'F1', 'F2', 'G1', 'G2', 'H1', 'H2', 'I1', 'I2']

    p.response_msg
    h2(class='form_head' style='color:#000;') Add Class

    //- form
    form(class='add_class_form')        

        a(href='/faculty/home')
            i(class="fa fa-arrow-left" aria-hidden="true")
            span= ` Back to Classes`

        //- name input
        .field
            label Class Name
            input(
                type='text'
                class='name'
                name='name'
                autocomplete='off'
            )
            small(style='font-size:12px; color:#757575; margin-left:10px;') This will be auto-generated

        .field2
            //- Department
            .field
                label *Department
                select(name='department' value='' class='department' )
                    option(value='') Select The Department Here
                        -departments.forEach(department => {
                            option(value=department)= department
                        -})

            //- Semester
            .field
                label *Semester
                select(name='semester' class='semester' value='')
                    option(value='') Select The Semester Here
                        -semesters.forEach(semester => {
                            option(value=semester)= semester
                        -})

        .field2
            //- batch
            .field
                label *Batch
                select(name='batch' value='' class='batch' )
                    option(value='') Select The Batch Here
                    option(value=1)= 1
                    option(value=2)= 2

            //- Section
            .field
                label *Section
                select(name='section' class='section' value='')
                    option(value='') Select The Section Here
                        -sections.forEach(section => {
                            option(value=section)= section
                        -})

        //- subject
        .field
            label *Subject
            select(name="subject" class='subject')
                option(value='') Select The Semester first

        //- subject code
        .field
            label *Subject Code
            input(
                type='text'
                class='code'
                name='code'
                autocomplete='off'
                placeholder='Select the semester first'
            )

        small(style='font-size:12px; color:#757575; margin-left:10px;') Fields Marked with '*' are mandotary

        .btn_con
            button(type="submit") Add Class

    script(src="js/add.js")